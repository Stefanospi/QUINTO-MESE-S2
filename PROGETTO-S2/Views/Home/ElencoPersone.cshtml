@model IEnumerable<PROGETTO_S2.Models.Persona>

<h2 class="mb-4 font-personal">Elenco persone</h2>
<hr />

@if (Model != null && Model.Any())
{
    <div class="table-responsive mt-4">
        <table class="table table-striped table-bordered border-personal">
            <thead class="bg-personal">
                <tr>
                    <th class="fst-italic text-light">Nome</th>
                    <th class="fst-italic text-light">Cognome</th>
                    <th class="fst-italic text-light">Codice Fiscale</th>
                    <th class="fst-italic text-light">Email</th>
                    <th class="fst-italic text-light">Telefono</th>
                    <th class="fst-italic text-light">Cellulare</th>
                    <th class="fst-italic text-light">Città</th>
                    <th class="fst-italic text-light">Provincia</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var persona in Model)
                {
                    <tr>
                        <td class="fst-italic">@persona.Nome</td>
                        <td class="fst-italic">@persona.Cognome</td>
                        <td class="fst-italic">@persona.CF</td>
                        <td class="fst-italic">@persona.Email</td>
                        <td class="fst-italic">@persona.Telefono</td>
                        <td class="fst-italic">@persona.Cellulare</td>
                        <td class="fst-italic">@persona.Città</td>
                        <td class="fst-italic">@persona.Provincia</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning font-personal" role="alert">
        Nessun cliente trovato.
    </div>
}
