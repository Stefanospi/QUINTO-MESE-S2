@model PROGETTO_S2.Models.Utente

@{
    ViewData["Title"] = "Login";
}


<div class="container border-personal p-4">
    <h2 class="font-personal mb-4">Login</h2>
    <hr />
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Username" class="control-label fst-italic">Inserisci Username:</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label fst-italic">Inserisci Password:</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-personal">Login</button>
        </div>
        <div class="form-group mt-2">
            <a class="text-decoration-none btn btn-personal2" asp-action="Register">Non sei registrato? Clicca qui!</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
