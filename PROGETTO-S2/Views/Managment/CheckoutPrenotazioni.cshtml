@model PROGETTO_S2.Models.CheckoutModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout Details</h2>

<div>
    <h3>Dettagli Prenotazione</h3>
    <p><strong>ID Prenotazione</strong> @Model.IdPrenotazione</p>
    <p><strong>Numero Camera</strong> @Model.NumeroCamera</p>
    <p><strong>Soggiorno Dal:</strong> @Model.SoggiornoDal.ToShortDateString()</p>
    <p><strong>Soggiorno Al:</strong> @Model.SoggiornoAl.ToShortDateString()</p>
    <p><strong>Tariffa</strong> @Model.Tariffa.ToString("C")</p>
    <p><strong>Caparra</strong> @Model.Caparra.ToString("C")</p>
    <p><strong>Importo da saldare:</strong> @Model.ImportoDaSaldare.ToString("C")</p>

    <h3>Servizi Aggiuntivi</h3>
    @if (Model.ServiziAgg != null && Model.ServiziAgg.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Descrizione</th>
                    <th>Data</th>
                    <th>Quantità</th>
                    <th>Prezzo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var servizio in Model.ServiziAgg)
                {
                    <tr>
                        <td>@servizio.ServizioAgg</td>
                        <td>@servizio.DataServizio?.ToShortDateString()</td>
                        <td>@servizio.Quantita</td>
                        <td>@servizio.Prezzo?.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Non è stato trovato nessun servizio aggiuntivo.</p>
    }
</div>