@model PROGETTO_S2.Models.CheckoutModel

@{
    ViewData["Title"] = "Checkout";
}

<h2 class="mb-4 font-personal">Dettagli del Checkout</h2>
<hr />

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="bg-personal">
            <tr class="text-white">
                <th>Numero Camera</th>
                <th>Soggiorno Dal</th>
                <th>Soggiorno Al</th>
                <th>Tariffa</th>
                <th>Caparra</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="fst-italic">@Model.NumeroCamera</td>
                <td class="fst-italic">@Model.SoggiornoDal.ToShortDateString()</td>
                <td class="fst-italic">@Model.SoggiornoAl.ToShortDateString()</td>
                <td class="fst-italic">@Model.Tariffa.ToString("C")</td>
                <td class="fst-italic">@Model.Caparra.ToString("C")</td>
            </tr>
        </tbody>
    </table>
</div>

<h2 class="mt-4 mb-4 font-personal">Servizi Aggiuntivi</h2>
<hr />

<div class="form-group">
    <select id="additionalServicesDropdown" class="form-control border-personal">
        @foreach (var servizio in Model.ServiziAgg)
        {
            <option value="@servizio.ServizioAgg">
                @servizio.ServizioAgg - @servizio.Quantita x
                @(servizio.Prezzo.HasValue ? servizio.Prezzo.Value.ToString("C") : "N/A")
            </option>
        }
    </select>
</div>

<!-- Centered Importo da Saldare -->
<div class="text-center mt-4">
    <h2 class="font-personal mb-3">Importo da Saldare</h2>
    <hr />
    <h3 class="bg-personal p-3 border-personal">@Model.ImportoDaSaldare.ToString("C")</h3>
</div>
