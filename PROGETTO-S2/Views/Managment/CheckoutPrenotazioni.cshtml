@model PROGETTO_S2.Models.CheckoutModel

<h2>Checkout Prenotazioni</h2>

<table class="table">
    <thead>
        <tr>
            <th>Numero Camera</th>
            <th>Soggiorno Dal</th>
            <th>Soggiorno Al</th>
            <th>Tariffa</th>
            <th>Caparra</th>
            <th>Servizio Aggiuntivo</th>
            <th>Data Servizio</th>
            <th>Quantità</th>
            <th>Prezzo</th>
            <th>Importo Da Saldare</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.NumeroCamera</td>
            <td>@Model.SoggiornoDal.ToString("dd/MM/yyyy")</td>
            <td>@Model.SoggiornoAl.ToString("dd/MM/yyyy")</td>
            <td>@Model.Tariffa.ToString("C")</td>
            <td>@Model.Caparra.ToString("C")</td>
            <td>@Model.ServizioAggiuntivo</td>
            <td>@Model.DataServizio?.ToString("dd/MM/yyyy")</td>
            <td>@Model.Quantita</td>
            <td>@Model.Prezzo?.ToString("C")</td>
            <td>@Model.ImportoDaSaldare.ToString("C")</td>
        </tr>
    </tbody>
</table>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Torna alla Home</a>
