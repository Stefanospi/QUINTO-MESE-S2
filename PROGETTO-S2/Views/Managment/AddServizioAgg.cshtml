@model PROGETTO_S2.Models.PrenotazioneServizioAgg
@{
    var serviziAgg = ViewBag.serviziAgg as List<ServizioAgg>;
}

<h2 class="mb-4 font-personal">Aggiungi Servizio Aggiuntivo</h2>
<hr />

<form asp-action="AddServizioAgg" method="post" class="border-personal p-4">
    <div class="form-group mb-3">
        <label asp-for="IdServizioAgg" class="control-label fst-italic">Servizio Aggiuntivo</label>
        <select asp-for="IdServizioAgg" class="form-control border-personal">
            <option value="">Seleziona un servizio</option>
            @foreach (var s in serviziAgg)
            {
                <option value="@s.IdServizioAgg">@s.Descrizione</option>
            }
        </select>
        <span asp-validation-for="IdServizioAgg" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Data" class="control-label fst-italic">Data</label>
        <input asp-for="Data" class="form-control border-personal" type="date" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Quantita" class="control-label fst-italic">Quantità</label>
        <input asp-for="Quantita" class="form-control border-personal" />
        <span asp-validation-for="Quantita" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Prezzo" class="control-label fst-italic">Prezzo (x quantità)</label>
        <input asp-for="Prezzo" class="form-control border-personal" />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="IdPrenotazione" />

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-personal">Aggiungi Servizio</button>
        <a asp-controller="Home" asp-action="ElencoPrenotazioni" class="btn btn-personal2">Indietro</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
